
@model PositionVm

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Inverse table</h4>
            <p class="card-description">
              <a asp-area="Admin" asp-controller="Position" asp-action="Create">Create</a>
            </p>
            <div class="table-responsive pt-3">
                <table class="table table-dark">
                    <thead>
                        <tr>
                            <th>
                                #
                            </th>
                            <th>
                              Name
                            </th>
                         <th>Options</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            int count = 1;
                        }
                        @foreach (var item in Model.Positions)
                        {
                            <tr>
                                <td>
                                    @count
                                </td>
                                <td>
                                    @item.Name
                                </td>
                                <td>
                                    <a class="btn btn-danger" asp-area="Admin" asp-controller="Position" asp-action="Delete" asp-route-id="@item.Id"><i class="fa fa-trash-o"></i></a>
                                    <a class="btn btn-primary" asp-area="Admin" asp-controller="Position" asp-action="Edit"asp-route-id="@item.Id"><i class="fa fa-edit"></i></a>
                                    <a class="btn btn-success"asp-area="Admin" asp-controller="Position"asp-action="Detail"asp-route-id="@item.Id"><i class="fa fa-info-circle"></i></a>
                                </td>
                            </tr>
                            count++;
                        }
                        
                    
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
