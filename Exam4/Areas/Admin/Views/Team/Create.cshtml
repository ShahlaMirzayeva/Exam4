@model CreateTeamVm
<div class="content-wrapper">
    <div class="row">
        <div class="col-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Team</h4>
                    <p class="card-description">
                        Create
                    </p>
                    
                    <form class="forms-sample" method="post" enctype="multipart/form-data">
                        <div class="form-group">
                            <label asp-for="Name" for="exampleInputName1">Name</label>
                            <input asp-for="Name" type="text" class="form-control" id="exampleInputName1" placeholder="Name">
                        </div>
                        <div class="form-group">
                            <label asp-for="Surname" for="exampleInputName1">Surname</label>
                            <input asp-for="Surname" type="text" class="form-control" id="exampleInputName1" placeholder="Surname">
                        </div>
                        <div class="form-group">
                            <label asp-for="Photo" for="exampleInputName1">Image</label>
                            <input asp-for="Photo" type="file" class="form-control" id="exampleInputName1" placeholder="Image">
                        </div>
                        <label for="validationCustom04" class="form-label">Positions</label>
                        <select asp-for="PositionId"  class="form-select" id="validationCustom04" >
                            @foreach (var position in ViewBag.Positions)
                            {
                                <option value="@position.Id">@position.Name</option>
                            }

                        </select>

                        <button type="submit" class="btn btn-primary me-2 mt-5">Submit</button>
                        <button class="btn btn-light mt-5">Cancel</button>
                    </form>
                </div>
            </div>
        </div>
</<div>
</div>
